---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
    headerTheme?: 'light' | 'dark';
}

const { title, headerTheme = 'light' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hotel Rio - Habarana, Sri Lanka. Nestled in the Cultural Triangle with views of Sigiriya." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- GSAP (via CDN for simplicity if needed or client-side use) -->
		<!-- We will use npm imported gsap in components, but ensuring specific script readiness -->
	</head>
	<body class="bg-rio-white text-rio-black transition-opacity duration-500 ease-in-out">
		<Header theme={headerTheme} />
		<slot />
		<Footer />
		<script>
			import { initAnimations } from '../scripts/animations.js';
			
			// Run on load
			document.addEventListener('DOMContentLoaded', () => {
				initAnimations();
			});
		</script>
	</body>
</html>
