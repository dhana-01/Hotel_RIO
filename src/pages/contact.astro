---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Hotel Rio" headerTheme="dark">
  <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 bg-rio-white min-h-screen overflow-hidden">
    <!-- Decorative Background Elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-rio-gray/10 -skew-x-12 translate-x-20 pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-16 text-center md:text-left opacity-0 animate-fade-up" style="animation-delay: 0.1s;">
          <h1 class="text-4xl md:text-6xl font-serif text-rio-red-dark mb-6">Get in Touch</h1>
          <p class="text-gray-600 font-sans text-lg md:text-xl font-light leading-relaxed max-w-2xl">
            Planning your getaway? We'd love to hear from you. Fill out the form below or reach us directly.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 lg:gap-24">
          <!-- Contact Form -->
          <div class="md:col-span-12 lg:col-span-8 opacity-0 animate-fade-up" style="animation-delay: 0.3s;">
            <form class="space-y-8">
              <!-- Name -->
              <div class="group">
                <label for="name" class="block text-xs uppercase tracking-widest text-rio-black font-semibold mb-2">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  placeholder="John Doe" 
                  class="w-full bg-transparent border-b border-gray-300 py-3 text-rio-black focus:outline-none focus:border-rio-red transition-colors placeholder-gray-300 font-serif text-lg"
                />
              </div>

              <!-- Email -->
              <div class="group">
                <label for="email" class="block text-xs uppercase tracking-widest text-rio-black font-semibold mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  placeholder="john@example.com" 
                  class="w-full bg-transparent border-b border-gray-300 py-3 text-rio-black focus:outline-none focus:border-rio-red transition-colors placeholder-gray-300 font-serif text-lg"
                />
              </div>

              <!-- Message -->
              <div class="group">
                <label for="message" class="block text-xs uppercase tracking-widest text-rio-black font-semibold mb-2">Message</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="1" 
                  placeholder="How can we help?" 
                  class="w-full bg-transparent border-b border-gray-300 py-3 text-rio-black focus:outline-none focus:border-rio-red transition-colors placeholder-gray-300 font-serif text-lg resize-none min-h-[50px]"
                  oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"
                ></textarea>
              </div>

              <div class="pt-4">
                <button type="submit" class="bg-rio-red-dark text-white px-8 py-4 uppercase tracking-[0.2em] text-sm hover:bg-rio-red transition-all duration-300 shadow-lg hover:shadow-rio-red/40 transform hover:-translate-y-1">
                  Send Inquiry
                </button>
              </div>
            </form>
          </div>

          <!-- Contact Details -->
          <div class="md:col-span-12 lg:col-span-4 space-y-10 opacity-0 animate-fade-up" style="animation-delay: 0.5s;">
             <!-- Address -->
             <div class="flex items-start group hover:translate-x-2 transition-transform duration-300">
               <span class="text-rio-red-dark mt-1 mr-4">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                 </svg>
               </span>
               <div>
                 <p class="text-gray-500 font-sans text-sm font-light">
                   No. 123, Sigiriya Road,<br/>Habarana, Sri Lanka
                 </p>
               </div>
             </div>

             <!-- Phone -->
             <div class="flex items-start group hover:translate-x-2 transition-transform duration-300">
               <span class="text-rio-red-dark mt-1 mr-4">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                 </svg>
               </span>
               <div>
                 <p class="text-gray-500 font-sans text-sm font-light hover:text-rio-red transition-colors">
                   <a href="tel:+94112345678">+94 11 234 5678</a>
                 </p>
               </div>
             </div>

             <!-- Email -->
             <div class="flex items-start group hover:translate-x-2 transition-transform duration-300">
               <span class="text-rio-red-dark mt-1 mr-4">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                 </svg>
               </span>
               <div>
                 <p class="text-gray-500 font-sans text-sm font-light hover:text-rio-red transition-colors">
                   <a href="mailto:info@riohotel.lk">info@riohotel.lk</a>
                 </p>
               </div>
             </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeUp {
      from {
          opacity: 0;
          transform: translateY(20px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }
  
  .animate-fade-up {
      animation: fadeUp 0.8s ease-out forwards;
  }
</style>
