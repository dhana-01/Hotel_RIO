---
const rooms = [
  {
    title: "Deluxe Double Room- Sigiriya View",
    description: "Spacious room with a private balcony offering breathtaking views of Sigiriya Rock Fortress.",
    price: "Rs.6,000 / Night",
    imageMain: "/images/room1.png",
    imageHover: "/images/room4.png"
  },
  {
    title: "Standard Double Room- Garden View",
    description: "Cozy room nestled in our lush tropical garden, perfect for nature lovers.",
    price: "Rs.8,000 / Night",
    imageMain: "/images/room02.png",
    imageHover: "/images/room5.png"
  },
  {
    title: "Family Suite",
    description: "Large suite designed for families, featuring two bedrooms and a living area.",
    price: "Rs.20,000 / Night",
    imageMain: "/images/room6.png",
    imageHover: "/images/room7.png"
  }
];
---

<section id="rooms" class="relative py-40 bg-rio-black text-white overflow-hidden">
  
  <!-- Smooth Wave Divider Top -->
  <div class="absolute top-0 left-0 w-full overflow-hidden leading-[0] z-10">
      <svg class="relative block w-[calc(100%+1.3px)] h-[60px] md:h-[120px]" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-rio-white"></path>
      </svg>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-20">
      <p class="text-rio-red font-sans uppercase tracking-[0.25em] text-xs md:text-sm mb-4 animate-fade-in-up">Accommodations</p>
      <h2 class="text-4xl md:text-6xl font-serif text-white mb-6 animate-fade-in-up" style="animation-delay: 0.1s;">Your Sanctuary</h2>
      <div class="w-20 h-1 bg-rio-red mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 0.2s;"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {rooms.map((room, index) => (
        <div class="group relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden shadow-lg hover:shadow-rio-red/20 hover:-translate-y-2 transition-all duration-500 flex flex-col h-full animate-fade-in-up" style={`animation-delay: ${0.2 + (index * 0.1)}s; opacity: 0; animation-fill-mode: forwards;`}>
          <!-- Image Container -->
          <div class="aspect-[4/3] overflow-hidden relative">
             <!-- Primary Image -->
             <img src={room.imageMain} alt={room.title} class="object-cover w-full h-full transform transition-all duration-700 group-hover:scale-110" />
             <!-- Hover Image -->
             <img src={room.imageHover} alt={room.title} class="absolute inset-0 object-cover w-full h-full transform transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-110" />
             <!-- Gradient Overlay -->
             <div class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-black/80 to-transparent opacity-80 transition-opacity duration-300"></div>
          </div>
          
          <!-- Content -->
          <div class="p-8 flex flex-col flex-grow">
            <h3 class="text-2xl font-serif text-white mb-3 group-hover:text-rio-red transition-colors duration-300 min-h-[64px]">{room.title}</h3>
            <p class="text-gray-400 font-sans text-sm leading-relaxed mb-6 line-clamp-3">{room.description}</p>
            
            <div class="mt-auto flex justify-between items-center pt-6 border-t border-white/10">
                <span class="text-rio-red font-semibold font-sans text-lg tracking-wide">{room.price}</span>
                <a href="#book" class="inline-flex items-center gap-2 text-white/80 uppercase text-xs tracking-[0.15em] hover:text-white transition-colors group/link">
                    Book Now
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m16 8h-2" />
                    </svg>
                </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Smooth Wave Divider Bottom -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] z-10 rotate-180">
      <svg class="relative block w-[calc(100%+1.3px)] h-[60px] md:h-[120px]" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-rio-white"></path>
      </svg>
  </div>
</section>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
