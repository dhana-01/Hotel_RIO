---
const rooms = [
  {
    title: "Deluxe Double Room- Sigiriya View",
    description: "Spacious room with a private balcony offering breathtaking views of Sigiriya Rock Fortress.",
    price: "$120 / Night"
  },
  {
    title: "Standard Double Room- Garden View",
    description: "Cozy room nestled in our lush tropical garden, perfect for nature lovers.",
    price: "$90 / Night"
  },
  {
    title: "Family Suite",
    description: "Large suite designed for families, featuring two bedrooms and a living area.",
    price: "$180 / Night"
  }
];
// Using hero bg as placeholder for room images
---

<section id="rooms" class="py-20 bg-rio-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <p class="text-rio-red font-sans uppercase tracking-widest text-sm mb-4">Accommodations</p>
      <h2 class="text-4xl md:text-5xl font-serif text-rio-black">Your Sanctuary</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {rooms.map((room) => (
        <div class="group relative overflow-hidden bg-white shadow-sm hover:shadow-xl transition-shadow duration-500">
          <div class="aspect-[4/3] overflow-hidden bg-gray-200 relative">
             <img src="/images/hero-bg.jpg" alt={room.title} class="object-cover w-full h-full transform group-hover:scale-110 transition-transform duration-700" />
             <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition duration-500"></div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-serif text-rio-black mb-3">{room.title}</h3>
            <p class="text-gray-600 font-sans text-sm leading-relaxed mb-6">{room.description}</p>
            <div class="flex justify-between items-center border-t border-gray-100 pt-4">
                <span class="text-rio-red font-semibold font-sans">{room.price}</span>
                <a href="#book" class="text-rio-black uppercase text-xs tracking-widest hover:text-rio-red transition-colors">Book Now</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
