---
const links = [
  { href: "#about", label: "About" },
  { href: "#rooms", label: "Rooms" },
  { href: "#dining", label: "Dining" },
  { href: "#location", label: "Location" },
];
---

<header class="fixed w-full z-50 transition-all duration-300 bg-white/10 backdrop-blur-md border-b border-white/10" id="main-header">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Links (Left) -->
    <nav class="hidden md:flex space-x-8">
      {links.slice(0, 2).map((link) => (
        <a href={link.href} class="text-rio-white hover:text-rio-accent transition font-sans text-sm tracking-widest uppercase">
          {link.label}
        </a>
      ))}
    </nav>

    <!-- Logo (Center) -->
    <a href="/" class="text-2xl md:text-3xl font-serif font-bold text-rio-white tracking-widest uppercase">
      Hotel Rio
    </a>

    <!-- Links (Right) + CTA -->
    <div class="flex items-center space-x-8">
      <nav class="hidden md:flex space-x-8">
        {links.slice(2).map((link) => (
          <a href={link.href} class="text-rio-white hover:text-rio-accent transition font-sans text-sm tracking-widest uppercase">
            {link.label}
          </a>
        ))}
      </nav>
      <a href="#book" class="hidden md:inline-block px-6 py-2 bg-rio-red hover:bg-rio-red-dark text-white font-sans text-sm tracking-wider uppercase transition-colors">
        Book Now
      </a>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden text-rio-white focus:outline-none" aria-label="Open Menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  // Simple scroll effect for header
  const header = document.getElementById("main-header");
  
  if (header) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
          header.classList.add("bg-rio-black/90", "py-2");
          header.classList.remove("bg-white/10", "py-4");
        } else {
          header.classList.add("bg-white/10", "py-4");
          header.classList.remove("bg-rio-black/90", "py-2");
        }
      });
  }
</script>
