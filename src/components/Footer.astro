---
const currentYear = new Date().getFullYear();
---

<footer class="bg-rio-black text-white/80 font-sans py-20 border-t border-white/10">
  <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-12">
    <!-- Brand -->
    <div>
      <h4 class="text-2xl font-serif text-white mb-6 uppercase tracking-widest">Hotel Rio Habarana</h4>
      <p class="text-sm leading-relaxed max-w-xs text-gray-400 mb-8">
        Authentic Sri Lankan hospitality nestled in Habarana. Experience the culture, nature, and comfort.
      </p>
      
      <!-- Social Media Icons -->
      <div class="flex space-x-6">
        <!-- Instagram -->
        <a href="#" aria-label="Instagram" class="group relative">
            <div class="absolute inset-0 bg-rio-red/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400 group-hover:text-rio-red group-hover:scale-110 transition-all duration-300 transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
        </a>

        <!-- Facebook -->
        <a href="#" aria-label="Facebook" class="group relative">
            <div class="absolute inset-0 bg-rio-red/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400 group-hover:text-rio-red group-hover:scale-110 transition-all duration-300 transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
               <path stroke-linecap="round" stroke-linejoin="round" d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
            </svg>
        </a>

        <!-- Twitter / X -->
        <a href="#" aria-label="Twitter" class="group relative">
             <div class="absolute inset-0 bg-rio-red/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
             <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400 group-hover:text-rio-red group-hover:scale-110 transition-all duration-300 transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
             </svg>
        </a>

        <!-- WhatsApp -->
        <a href="#" aria-label="WhatsApp" class="group relative">
             <div class="absolute inset-0 bg-rio-red/20 rounded-full blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
             <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400 group-hover:text-rio-red group-hover:scale-110 transition-all duration-300 transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
             </svg>
        </a>
      </div>
    </div>

    <!-- Contact -->
    <div>
      <h5 class="text-white uppercase tracking-widest text-sm mb-6">Contact Us</h5>
      <ul class="space-y-4 text-sm text-gray-400">
        <li>
            <strong class="block text-white/60 text-xs uppercase mb-1">Address</strong>
            Habarana, Sri Lanka
        </li>
        <li>
            <strong class="block text-white/60 text-xs uppercase mb-1">Phone</strong>
            +94 770115348
        </li>
        <li>
            <strong class="block text-white/60 text-xs uppercase mb-1">Email</strong>
            riohotelhabarana@gmail.com
        </li>
      </ul>
    </div>

    <!-- Quick Links -->
    <div>
      <h5 class="text-white uppercase tracking-widest text-sm mb-6">Explore</h5>
      <ul class="space-y-3 text-sm text-gray-400">
        <li><a href="#about" class="hover:text-rio-red transition-colors">About</a></li>
        <li><a href="#rooms" class="hover:text-rio-red transition-colors">Accommodations</a></li>
        <li><a href="#dining" class="hover:text-rio-red transition-colors">Dining</a></li>
        <li><a href="#location" class="hover:text-rio-red transition-colors">Location</a></li>
        <li><a href="/privacy" class="hover:text-rio-red transition-colors">Privacy Policy</a></li>
      </ul>
    </div>
  </div>

  <div class="container mx-auto px-6 mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500 uppercase tracking-widest">
    <p>&copy; {currentYear} Hotel Rio Habarana. All rights reserved.</p>
    <p>Designed for Luxury.</p>
  </div>
</footer>
